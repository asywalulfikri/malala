<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C4745"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="121dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"
                android:adjustViewBounds="true"
                android:maxHeight="80px"
                android:maxWidth="80px"
                android:src="@drawable/babababab" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/namalogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="94dp"
                    android:text="MALALA"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

              

                <LinearLayout
                    android:layout_width="242dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/informasi"
                        android:layout_width="191dp"
                        android:layout_height="wrap_content"
                        android:text="Aplikasi Pariwisata Sumatera Barat"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/lisviewmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:listSelector="@drawable/list_selector" >
    </ListView>

</LinearLayout>